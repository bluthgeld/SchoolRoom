<h1>Login</h1>




<% if flash.notice %>
  <div>
    <%= flash.notice%>
  </div>
  <%end%>
<div class="login">
  <%= form_tag '/login' do %>
    <p><%=label :username, "Username"%>
    <%=text_field_tag :username%></p>

    <p><%=label :password, "Password" %>
    <%=password_field_tag :password %></p>
    <%= submit_tag "Login"%>
    <%end%>
</div>

<div class="home"><%= link_to "Go Home", home_path %></div>
