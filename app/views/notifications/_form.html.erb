<%= form_for @notification do |n| %>
<%= n.hidden_field :educator_id, :value => @user.educator.id %>
<h2><%= n.label "Student Name: " %> <%=n.collection_select(:student_id, @user.get_all_students, :id, :full_name, prompt: true)%></h2>
<h2><%= n.label "Subject" %> <%=n.text_field :subject %></h2>
<h2><%= n.label "Message"%> <%=n.text_area :message, cols: 35, rows: 5 %></h2>

<p><%= n.submit %></p>
<% end %>
